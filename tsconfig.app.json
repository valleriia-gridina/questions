{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "helpers/*": ["helpers/*"],
      "types/*": ["types/*"],
      "constants/*": ["constants/*"]
    },
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true
  },
  "include": ["src"]
}
